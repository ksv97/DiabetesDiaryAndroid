<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/list_item_background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDate"
            android:layout_marginHorizontal="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_marginHorizontal="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            style="@style/ListItemTextSizeForDiabetesParams"
            android:text="@string/sugar"
            />

        <TextView
            android:id="@+id/tvSugar"
            android:layout_marginHorizontal="5dp"
            android:layout_width="wrap_content"
            android:textColor="@color/sugar"
            style="@style/ListItemTextSizeForDiabetesParams"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_marginHorizontal="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            style="@style/ListItemTextSizeForDiabetesParams"
            android:text="@string/carb"
            />
        <TextView
            android:layout_marginHorizontal="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/carb"
            style="@style/ListItemTextSizeForDiabetesParams"
            android:id="@+id/tvCarbUnits"
            />

        <TextView
            android:layout_marginHorizontal="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            style="@style/ListItemTextSizeForDiabetesParams"
            android:text="@string/insulin"
            />

        <TextView
            android:layout_marginHorizontal="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/insulin"
            style="@style/ListItemTextSizeForDiabetesParams"
            android:id="@+id/tvInsulin"
            />

    </LinearLayout>

    <TextView
        android:layout_marginHorizontal="5dp"
        android:id="@+id/tvNote"
        android:textStyle="italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"/>




</LinearLayout>