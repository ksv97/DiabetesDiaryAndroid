<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddDiaryItemActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:text="@string/sugar"/>

            <TextView
                android:id="@+id/tvSugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="0.0"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="9.5">

            <SeekBar
                android:max="25"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:progress="0"

                android:id="@+id/sbSugarIntPart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <SeekBar
                android:max="10"

                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:progress="0"

                android:id="@+id/sbSugarFloatPart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:text="@string/carb"/>

            <TextView
                android:id="@+id/tvCarb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="0.0"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="9.5">

            <SeekBar
                android:max="25"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:progress="0"

                android:id="@+id/sbCarbIntPart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <SeekBar
                android:max="10"

                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:progress="0"

                android:id="@+id/sbCarbFloatPart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:text="@string/insulin"/>

            <TextView
                android:id="@+id/tvInsulin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="0.0"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="9.5">

            <SeekBar
                android:max="25"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:progress="0"

                android:id="@+id/sbInsulinIntPart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <SeekBar
                android:max="10"

                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:progress="0"

                android:id="@+id/sbInsulinFloatPart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:hint="Комментарий к записи"/>



</LinearLayout>